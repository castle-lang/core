{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "max-line-length": {
            "options": [80]
        }
    },
    "rules": {
        "cyclomatic-complexity": true,
        "quotemark": [true, "single", "avoid-escape"],
        "interface-name": false,
        "max-classes-per-file": false
    },
    "rulesDirectory": []
}
